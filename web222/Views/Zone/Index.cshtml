@model IEnumerable<web222.Models.Zone>

<h2>Zones</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        @foreach (var zone in Model)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="zone_@zone.Id" name="selectedZones" value="@zone.Id" @(zone.IsSelected ? "checked" : "") />
                <label class="form-check-label" for="zone_@zone.Id">@zone.Name</label>
            </div>
        }
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>