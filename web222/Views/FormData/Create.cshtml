@model web222.Models.FormData

<h2>Create New Entry</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nazwisko" class="control-label"></label>
        <input asp-for="Nazwisko" class="form-control" />
        <span asp-validation-for="Nazwisko" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Imie" class="control-label"></label>
        <input asp-for="Imie" class="form-control" />
        <span asp-validation-for="Imie" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pracodawca" class="control-label"></label>
        <select asp-for="Pracodawca" class="form-control">
            <option value="">-- Select Employer --</option>
            @foreach (var pracodawca in ViewBag.Pracodawcy)
            {
                <option value="@pracodawca.Nazwa">@pracodawca.Nazwa</option>
            }
        </select>
        <span asp-validation-for="Pracodawca" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataWeryfikacji" class="control-label"></label>
        <input asp-for="DataWeryfikacji" class="form-control" type="date" />
        <span asp-validation-for="DataWeryfikacji" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataWyslaniaDoSG" class="control-label"></label>
        <input asp-for="DataWyslaniaDoSG" class="form-control" type="date" />
        <span asp-validation-for="DataWyslaniaDoSG" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumerWNP" class="control-label"></label>
        <input asp-for="NumerWNP" class="form-control" />
        <span asp-validation-for="NumerWNP" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WNP" class="control-label"></label>
        <input asp-for="WNP" class="form-control" />
        <span asp-validation-for="WNP" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KierownikPrzemek" class="control-label"></label>
        <input asp-for="KierownikPrzemek" class="form-control" />
        <span asp-validation-for="KierownikPrzemek" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataOdbioruID" class="control-label"></label>
        <input asp-for="DataOdbioruID" class="form-control" type="date" />
        <span asp-validation-for="DataOdbioruID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Uwagi" class="control-label"></label>
        <input asp-for="Uwagi" class="form-control" />
        <span asp-validation-for="Uwagi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DzialBB" class="control-label"></label>
        <input asp-for="DzialBB" class="form-control" />
        <span asp-validation-for="DzialBB" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
